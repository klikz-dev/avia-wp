{% macro imageCTA(data, options) %}
    {% from 'macros/button.twig' import button %}

    <div class="container mx-auto px-12 md:px-24 mx-32 py-16">
        {% if data.title %}
        <div class="mb-20 mx-auto max-w-6xl">
            <h3 class="mb-10 font-display text-xl text-blue-500 font-medium">{{ data.title|e }}</h3>
        </div>
        {% endif %}

        {% if data.image %}
        <div class="mb-20 mx-auto text-center">
            <img class="mx-auto mb-10" src="{{ Image(data.image).src }}" alt="{{ Image(data.image).alt }}" />
        </div>
        {% endif %}

        {% if data.cta_button.title %}
        <div class="mb-20 text-center">
            {{ button({
            markup: 'a',
            size: 'sm',
            theme: data.cta_button_style ? data.cta_button_style : 'primary',
            title: data.cta_button.title,
            url: data.cta_button.url
            }) }}
        </div>
        {% endif %}
    </div>
{% endmacro %}