{% macro podcast(data, options) %}
{% from 'macros/button.twig' import button %}
  <div class="-mt-32">
    <div class="color-field-blue-bg-200"></div>
    <div class="bg-blue-200 pt-32 pb-56">
      <div class="container mx-auto px-8">
        <div class="relative bg-white px-24 pt-24 pb-40 md:pb-24">
          <div class="md:flex md:-mx-24">
            <div class="md:w-4/6 md:px-24 mb-24 md:mb-0">
              {{ data.feature.embed }}
            </div>
            <div class="md:2/6 md:px-24">
              <blockquote>
                <div class="md:flex md:-mx-4">
                  <div class="md:px-4 mb-6 md:mb-0">
                    <svg width="21" height="19" viewBox="0 0 21 19" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M9.767 18.169H.208v-7.361c0-2.71.564-4.849 1.692-6.416C3.028 2.824 4.962 1.44 7.701.239l2.066 3.91c-1.685.792-2.85 1.583-3.494 2.374-.645.776-1.003 1.7-1.077 2.768h4.57v8.878zm11.14 0h-9.558v-7.361c0-2.71.564-4.849 1.691-6.416C14.17 2.824 16.102 1.44 18.841.239l2.066 3.91c-1.685.792-2.85 1.583-3.494 2.374-.644.776-1.003 1.7-1.077 2.768h4.57v8.878z" fill="#A9D1D5"/></svg>
                  </div>
                  <div class="md:px-4">
                    <p class="max-w-4xl mb-10 font-display text-xl text-regular text-blue-400">{{ data.feature.quote|e }}</p>
                    <footer>
                      <p class="font-body font-semibold text-tiny text-gray-500">{{ data.feature.attribution_line_one|e }}</p>
                      <p class="font-body text-tiny font-semibold text-gray-100">{{ data.feature.attribution_line_two|e }}</p>
                    </footer>
                  </div>
                </div>
              </blockquote>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endmacro %}