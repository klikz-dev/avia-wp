{% macro peopleGrid(data, options) %}
  <div class="flex -mx-12">
    {% for person in data.people %}
      {% set item = Post(person) %}
      <div class="profile flex items-start sm:w-1/2 md:w-1/3 px-12 py-10 mb-10" data-role="grid-trigger" data-id="{{ item.id|e }}">
        <div class="mb-24">
          <div class="mb-16">
            <img class="mx-auto" src="{{ Image(item.image).src|e('esc_url') }}" alt="{{ Image(item.image).alt|e }}">
          </div>
          <div class="text-center">
            <div class="mb-10 pb-16 border-b border-tan-100">
              <h4 class="font-display font-medium text-lg text-blue-500">{{ item.title|e }}</h4>
              <p class="font-display text-md text-green-200 font-semibold">{{ item.position|e }}</p>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{% endmacro %}