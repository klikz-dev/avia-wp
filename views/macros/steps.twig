{% macro steps(data, options) %}
  {% from 'macros/button.twig' import button %}

  <div class="container mx-auto px-12 md:px-24 mt-12 mb-16">
    {% if data.title or data.intro %}
      <div class="mb-20 mx-auto max-w-6xl text-center">
          {% if data.title %}
          <h3 class="mb-10 font-display text-xl text-blue-500 font-medium">{{ data.title|e }}</h3>
          {% endif %}

          {% if data.intro %}
          <p class="font-body text-tiny text-gray-500">{{ data.intro|e }}</p>
          {% endif %}
      </div>
    {% endif %}
    <div class="flex flex-col md:flex-row md:-mx-16">
      {% for step in data.steps %}
        <div class="md:w-1/3 md:px-16 mb-10">
          <div class="flex flex-col justify-center items-center">
            {% if step.image %}
              <div class="mx-auto mb-6 h-24 w-24">
                  <img class="rounded-full" src="{{ Image(step.image).src }}" alt="{{ Image(step.image).alt }}" />
              </div>
            {% else %}
              <div class="flex items-center justify-center mb-12 h-24 w-24 bg-blue-300 rounded-full">
                <p class="text-center font-display font-medium text-lg text-white">{{ loop.index }}</p>
              </div>
            {% endif %}
            <p class="mb-4 font-display text-lg font-medium text-green-200">{{ step.title|e }}</p>
            <div class="list-desc font-body text-gray-200">{{ step.text }}</div>
          </div>
        </div>
      {% endfor %}
    </div>

    {% if data.explore_more_btn.title %}
      <div class="text-center mt-10">
          {{ button({
          markup: 'a',
          size: 'sm',
          theme: 'primary',
          title: data.explore_more_btn.title,
          url: data.explore_more_btn.url
          }) }}
      </div>
      {% endif %}
  </div>
{% endmacro %}