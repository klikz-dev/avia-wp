{% macro imageGrid(data, options) %}
  <div class="container mx-auto px-12 md:px-24 mb-40">
    <div class="mb-20 mx-auto max-w-6xl text-center">
      <h3 class="mb-10 font-display text-xl text-blue-500 font-medium">{{ data.title|e }}</h3>
    </div>
    <div class="flex flex-wrap items-center justify-center">
      {% for i in data.images %}
        <div class="flex justify-center w-1/3 md:w-1/4">
          <img src="{{ Image(i).src|e('esc_url') }}" alt="{{ Image(i).alt|e }}" />
        </div>
      {% endfor %}
    </div>
  </div>
{% endmacro %}