{% macro pagination(data, options) %}
  {% set matchPages = ['1', '2', '3', '4', '5', '6', '7', '8', '9'] %}
  {% if data.posts.pages|length %}
    <div class="mb-24 container mx-auto">
      <div class="flex items-center justify-center">
        {% if data.posts.prev %}
          <a class="block mx-24" href="{{ data.posts.prev.link|e('esc_url') }}">
            <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M7.657 12.657L2 7l5.657-5.657" stroke="#0076BC" stroke-width="2"/></svg>
            <span class="sr-only">Previous</span>
          </a>
        {% else %}
          <span class="block mx-24">
            <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M7.657 12.657L2 7l5.657-5.657" stroke="#5D6160" stroke-width="2"/></svg>
          </span>
        {% endif %}
        <ul class="flex items-center justify-center">
          {% for page in data.posts.pages %}
            <li class="mx-6">
              {% if page.link %}
                <a href="{{ page.link|e('esc_url') }}" class="font-body font-bold text-xs {{ page.class|e }}">
                  {% if avia_in_array(page.title, matchPages) %}
                    0
                  {% endif %}
                  {{ page.title|e('wp_kses_post') }}
                </a>
              {% else %}
                <span class="font-body font-bold text-xs text-blue-300 {{ page.class|e }}">
                  {% if avia_in_array(page.title, matchPages) %}
                    0
                  {% endif %}
                  {{ page.title|e('wp_kses_post') }}
                </span>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
        {% if data.posts.next %}
          <a class="block mx-24" href="{{ data.posts.next.link|e('esc_url') }}">
            <svg width="13" height="14" viewBox="0 0 13 14" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M5.657 1.343L11.314 7l-5.657 5.657" stroke="#0076BC" stroke-width="2"/></svg>
            <span class="sr-only">Next</span>
          </a>
        {% else %}
          <span class="block mx-24">
            <svg width="13" height="14" viewBox="0 0 13 14" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M5.657 1.343L11.314 7l-5.657 5.657" stroke="#5D6160" stroke-width="2"/></svg>
          </span>
        {% endif %}
      </div>
    </div>
  {% endif %}
{% endmacro %}